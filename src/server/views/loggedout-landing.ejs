<html>
<head>
    <style>
        .menu{
            background-color: blanchedalmond;
            padding: 3px;
        }
        .background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh; /* Full viewport height */
            background-image: url('/uno-bg.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            z-index: -1; /* Sends the background behind the content */
            opacity: 0.7;
        }
        .content {
            position: relative;
            z-index: 1; /* Brings the content in front of the background */
            text-align: center;
            background-color: blanchedalmond;
        }
    </style>
</head>
<body>
    <!-- Menu (fixed to top) -->
    <div class="menu">
        <%- include('partials/menu') %> <!-- Include menu -->
    </div>
    <div class="background-container"></div>
    <div class = "content">
        <p><%= title %></p>
    </div>
    <script src="/js/main.js"></script>
</body>
</html>
