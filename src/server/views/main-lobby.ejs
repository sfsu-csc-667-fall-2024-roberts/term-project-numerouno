<!doctype html>
<html lang="en">

<head>
    <%- include ('partials/head') %>
        <link rel="stylesheet" href="../css/main-lobby.css">
</head>


<body class="bg-gray-100 font-sans leading-normal">
    <div class="container mx-auto px-4 py-6">
        <%- include('partials/menu') %>

            <section class="bg-white shadow-md rounded-lg p-6">
                <div class="lobby-container">
                    <!-- Game Listing Section -->
                    <section class="game-list">
                        <h1 class="text-2xl font-bold mb-4 text-center">Game Lobby</h1>

                        <!-- Games Table -->
                        <div class="mt-6 border border-gray-300 rounded-lg p-4">
                            <h2 class="text-xl font-semibold mb-4 text-center">Ongoing Games</h2>
                            <table>
                                <thead>
                                    <tr>
                                        <th>Room Name</th>
                                        <th>Players</th>
                                        <th class="text-center">Join</th>
                                    </tr>
                                </thead>
                                <tbody id="available-games-list">
                                    <% if (locals.availableGames && availableGames.length> 0) { %>
                                        <% availableGames.forEach((room)=> { %>
                                            <tr id="game-row-<%= room.id %>">
                                                <td>Game <%= room.id %>
                                                </td>
                                                <td>
                                                    <%= room.players %> / <%= room.player_count %>
                                                </td>
                                                <td class="text-center">
                                                    <form action="/games/join/<%= room.id %>" method="post">
                                                        <button
                                                            class="bg-blue-500 text-white rounded px-4 py-1 hover:bg-blue-700">Join</button>
                                                    </form>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="3" class="text-center text-gray-500 py-4">No
                                                            ongoing games available</td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- Chat Section -->
                    <aside class="chat-box bg-gray-50 border border-gray-300 rounded-lg p-4 chat-section flex flex-col">
                        <h2 class="text-xl font-semibold mb-4 text-center">Chat</h2>

                        <!-- Input Area -->
                        <div class="basis-2/6"><%- include('partials/chat') %></div>
                    </aside>

                    <script src="/js/game-lobby.js"></script>
                </div>
</body>

</html>