<!doctype html>
<html lang="en">
    <%- include ('../partials/head') %>
    <body class="text-[12px]">
        <div class="container mx-auto">
            <%- include('../partials/menu') %>

            <!-- Card Pile and Draw Pile Container -->
            <div class="pile-container flex justify-center space-x-8">
                <!-- Card Pile -->
                <div class="pile">
                    <h2>Card Pile</h2>
                    <div class="card" value="2">2</div> <!-- Blue 2 card -->
                </div>

                <!-- Draw Pile -->
                <div
                    class="draw-pile pile-container flex justify-center space-x-8">
                    <h2>Draw Pile</h2>
                    <div class="card draw-back">Draw</div>
                    <!-- Placeholder for draw pile -->
                </div>
            </div>

            <div class="players">
                <!-- Player 1 -->
                <div class="player">
                    <h2>Player 1</h2>
                    <div class="cards">
                        <div class="card" value="0">+2</div>
                        <!-- Red card -->
                        <div class="card" value="1">1</div> <!-- Green card -->
                        <div class="card" value="2">2</div> <!-- Blue card -->
                        <div class="card" value="3">3</div> <!-- Yellow card -->
                    </div>
                </div>

                <!-- Player 2 -->
                <div class="player">
                    <h2>Player 2</h2>
                    <div class="cards">
                        <div class="card" value="0">0</div> <!-- Red card -->
                        <div class="card" value="1">1</div> <!-- Green card -->
                        <div class="card" value="2">2</div> <!-- Blue card -->
                        <div class="card" value="3">3</div> <!-- Yellow card -->
                    </div>
                </div>

                <!-- Player 3 -->
                <div class="player">
                    <h2>Player 3</h2>
                    <div class="cards">
                        <div class="card" value="0">0</div> <!-- Red card -->
                        <div class="card" value="1">1</div> <!-- Green card -->
                        <div class="card" value="2">2</div> <!-- Blue card -->
                        <div class="card" value="3">3</div> <!-- Yellow card -->
                    </div>
                </div>
            </div>

        </div>
        <div class="basis-2/6"><%- include('../partials/chat') %></div>
    </body>

</html>